public Boolean companionPlants(String plant1, String plant2) {
     const companions = [
        ['lettuce', 'cucumbers'],
        ['lettuce', 'onions'],
        ['onions', 'carrots'],
        ['onions', 'tomatoes']
    ];

    // Check if the pair exists in either order
    return companions.some(([a, b]) =>
        (a === plant1 && b === plant2) ||
        (a === plant2 && b === plant1)
    );
}

}